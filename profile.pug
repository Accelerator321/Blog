block content 
      

      .card.my-2.d-flex.flex-wrap#profileblock(style='max-width: 50rem;margin:auto;')
        #box.d-inline-flex.flex-wrap
          img#profilepic(src=`${user.avatar}`, alt='...' , style='height:250px; min-width:70px; max-width:250px;')
          #smallbox.mx-2.d-flex.flex-column
              ul.list-group.list-group-flush
                li.list-group-item#username Username: #{user.username}
                li.list-group-item Email : #{user.email}

      h1(style="text-align:center;") Blogs by #{user.username}

      //- #blogsdiv

      table.table#blogsdiv.container.card(style="width:90%")
        hr
        tbody


      script(src='../static/profile.js')