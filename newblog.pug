extends index.pug

block content
    
    .d-flex.justify-content-center.my-2(style="width:100%;")
        form.row.g-3#blogcontent(style='width: 100%;' method="POST" enctype='multipart/form-data' action='/users/newblog')
            .col-md-12
                label.form-label Enter Title
                input.form-control(type='text' name='title' required='')
            .col-md-12
                label.form-label Add Image
                input.form-control(type='file' required='' name='image')
            
            .col-md-12
                label.form-label Enter Text
                textarea.form-control(rows="10" required='' name='text')
            .col-md-12
                input#pattern.form-control(type='text' required='' name='pattern')
            

            button.btn.btn-primary.mx-2.my-1#creatbtn Creat

    
                button.btn.btn-primary#signupbtn(type='submit' style='max-width: 100px;') Sign up
    //- button.btn.btn-primary.mx-2.my-1#imgbtn Add Image
    button.btn.btn-primary.mx-2.my-1#headbtn Add Heading
    button.btn.btn-primary.mx-2.my-1#parabtn Add Text

    
block script 

    script(src='../static/newblog.js')
