doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title JBlogs-Best Blogging Website
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor' crossorigin='anonymous')
  link(rel='stylesheet' href='../static/style.css')

block style
body 

    nav.navbar.navbar-expand-lg.bg-dark.navbar-dark.glass
      .container-fluid
        a.navbar-brand(href='#') JBlogs
        button.navbar-toggler.white(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon.white
        #navbarSupportedContent.collapse.navbar-collapse 
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current='page', href='/') Home
            li.nav-item
              a.nav-link#register(href='/user/signup') Get Registered
            li.nav-item
              a.nav-link#profile(href='/user/signin') My Profile
            
            li.nav-item.dropdown#menu(style="display:none;")
                a#navbarDropdown.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                    | Menu
                ul.dropdown-menu.glass(aria-labelledby='navbarDropdown')
                    li
                        a.dropdown-item(href='#') Creat Blog
                    li
                    a.dropdown-item(href='#') Delete Blog
                    li
                        hr.dropdown-divider
                    li
                        a.dropdown-item(href='#') My BLOGS
                    li 
                      a.btn.btn-outline-danger.mx-2.my-2#logbtn(href='/user/logout') Logout
          
          form.d-flex.mb-2.mr-2.d-flex.flex-column(role='search' method="GET", action="/results" onblur = 'hide()')
            div.d-flex.flex-row
              input.form-control.me-2(type='search', name='search' placeholder='Search',oninput="searchitem(event)", 
               style="max-width:222px",aria-label='Search', autocomplete="off")
              button.btn.btn-outline-success(type='submit') Search
            #searchlist.glass
          a.btn.btn-outline-primary.mb-2#signbtn(href='/user/signin') Sign in
          #usersection.my-2.ml-2
          

    block message 
    block content 
    block content2
   
    footer.d-flex.flex-wrap.justify-content-between.align-items-center.py-3.my-4.border

