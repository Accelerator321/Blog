extends index.pug
block content 
    link(rel='stylesheet' href='../static/style2.css')
    .d-flex.justify-content-center.my-5
        form.row.g-3.container#contactform(style='max-width: 500px;' action='/signin' method="POST")
            .col-md-12
                label.form-label(for='inputEmail4') Email
                input#inputEmail4.form-control(type='email' name='email')
            .col-md-12
                label.form-label(for='inputPassword4') Password
                input#inputPassword4.form-control(type='password' name='password')
            button.btn.btn-primary#signupbtn(type='submit' style='max-width:100px;') Sign in

